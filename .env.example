# Wallstreet Platform - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=development
PORT=3000
APP_NAME=Wallstreet Platform
API_VERSION=v1

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/wallstreet_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=wallstreet_dev
DB_USER=username
DB_PASSWORD=password
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d
API_KEY_SALT=your-api-key-salt-change-this

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/combined.log
ERROR_LOG_FILE=logs/error.log

# Swagger Documentation
ENABLE_SWAGGER=true
SWAGGER_PATH=/api-docs

# Third-Party API Keys (Payment Gateways)
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Banking APIs
BANK_API_KEY=your_bank_api_key
BANK_API_SECRET=your_bank_api_secret
SWIFT_API_KEY=your_swift_api_key

# Market Data Providers
MARKET_DATA_API_KEY=your_market_data_key
MARKET_DATA_ENDPOINT=https://api.marketdata.com

# CRM Integration
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret
SALESFORCE_INSTANCE_URL=https://your-instance.salesforce.com

# Accounting Integration
QUICKBOOKS_CLIENT_ID=your_quickbooks_client_id
QUICKBOOKS_CLIENT_SECRET=your_quickbooks_client_secret

# KYC/AML Services
KYC_API_KEY=your_kyc_service_api_key
KYC_API_ENDPOINT=https://api.kyc-service.com

# Message Queue
RABBITMQ_URL=amqp://localhost:5672
KAFKA_BROKERS=localhost:9092

# AWS Configuration (if using AWS services)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET_NAME=wallstreet-uploads

# Monitoring & Alerting
SENTRY_DSN=your_sentry_dsn
DATADOG_API_KEY=your_datadog_api_key

# Security
ENCRYPTION_KEY=your-encryption-key-32-chars-min
CSRF_SECRET=your-csrf-secret

# Session
SESSION_SECRET=your-session-secret
SESSION_MAX_AGE=86400000

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@wallstreet.com

# Feature Flags
ENABLE_API_VERSIONING=true
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_WEBHOOK_NOTIFICATIONS=true

# Performance
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000

# Development Tools
DEBUG=wallstreet:*
