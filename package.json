{
  "name": "wallstreet-platform",
  "version": "1.0.0",
  "description": "Modern API-driven financial technology platform with comprehensive integration capabilities",
  "main": "api/gateway/server.js",
  "scripts": {
    "start": "node api/gateway/server.js",
    "dev": "nodemon api/gateway/server.js",
    "test": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:load": "artillery run tests/load/api-load-test.yml",
    "test:smoke": "npm run test:smoke:local",
    "test:smoke:local": "node scripts/utils/smoke-test.js --env=local",
    "test:smoke:staging": "node scripts/utils/smoke-test.js --env=staging",
    "test:smoke:production": "node scripts/utils/smoke-test.js --env=production",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "db:setup": "node scripts/database/setup.js",
    "db:migrate": "node scripts/database/migrate.js",
    "db:migrate:staging": "node scripts/database/migrate.js --env=staging",
    "db:migrate:production": "node scripts/database/migrate.js --env=production",
    "db:seed": "node scripts/database/seed.js",
    "db:backup": "node scripts/database/backup.js",
    "db:backup:staging": "node scripts/database/backup.js --env=staging",
    "db:backup:production": "node scripts/database/backup.js --env=production",
    "db:verify": "node scripts/database/verify.js",
    "db:log:enable": "node scripts/database/enable-logging.js",
    "deploy:staging": "node scripts/deployment/deploy-staging.js",
    "deploy:production": "node scripts/deployment/deploy-production.js",
    "deploy:production:green": "node scripts/deployment/deploy-production.js --target=green",
    "traffic:shift:green": "node scripts/deployment/shift-traffic.js --target=green",
    "decommission:blue": "node scripts/deployment/decommission.js --target=blue",
    "rollback:production": "node scripts/deployment/rollback.js --env=production",
    "stop:production": "node scripts/deployment/stop.js --env=production",
    "health:check": "curl http://localhost:3000/health",
    "health:check:green": "node scripts/utils/health-check.js --target=green",
    "audit:generate": "node scripts/utils/audit-report.js",
    "compliance:export": "node scripts/utils/compliance-export.js",
    "logs:access": "node scripts/utils/access-logs.js",
    "build": "echo 'Build step - add build commands if needed'",
    "docker:build": "docker build -t wallstreet-api .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down"
  },
  "keywords": [
    "fintech",
    "api",
    "integration",
    "wallstreet",
    "financial-platform",
    "rest-api",
    "microservices"
  ],
  "author": "Technology/Domain Specialist II",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "ioredis": "^5.3.2",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "express-validator": "^7.0.1",
    "express-rate-limit": "^7.1.5",
    "rate-limit-redis": "^4.2.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "dotenv": "^16.3.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "amqplib": "^0.10.3",
    "axios": "^1.6.2",
    "bull": "^4.12.0",
    "stripe": "^14.10.0",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "artillery": "^2.0.3",
    "@types/node": "^20.10.5"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "api/**/*.js",
      "backend-integration/**/*.js",
      "platform-core/**/*.js",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
